<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.achougulsyr.su_app.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back1"
        android:scaleType="fitXY"
        android:alpha="0.5"/>
    <Button
        android:id="@+id/btn_dome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="Career Dome"
        android:onClick="dome"/>

    <Button
        android:id="@+id/btn_bird"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:text="Bird Library"
        android:layout_below="@+id/btn_dome"
        android:onClick="bird"/>

    <Button
        android:id="@+id/btn_schine"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/btn_bird"
        android:text="Schine Centre"
        android:onClick="schine"/>

</RelativeLayout>